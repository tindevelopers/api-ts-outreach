# Server Configuration
PORT=3000
NODE_ENV=development

# Database (Optional - using in-memory storage for stateless API)
# DATABASE_URL=postgresql://username:password@localhost:5432/outreach_api

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW_MS=900000

# GrowChief Integration
GROWCHIEF_ENDPOINT=http://localhost:8080
GROWCHIEF_API_KEY=your-growchief-api-key

# Cloud Run
CLOUD_RUN_SERVICE_NAME=api-outreach-service
CLOUD_RUN_REGION=us-central1
CLOUD_RUN_PROJECT_ID=your-gcp-project-id

# Google IAM (Optional - for production authentication)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS
CORS_ORIGIN=http://localhost:3000
